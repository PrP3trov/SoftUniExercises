@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 welcome-section">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-10 text-center">
            <h1 class="display-4">Welcome to Horizons</h1>
            <p class="lead">Explore Bulgaria's breathtaking destinations and terrains</p>
            <a href="/Identity/Account/Register" class="btn btn-primary btn-lg mt-3">Start Your Adventure</a>
        </div>
    </div>
</div>

<div class="container mt-4 explore-section">
    <h2 class="text-center section-title">Explore Bulgaria</h2>
    <div class="row mt-4">
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="/images/mountain.jpg" class="img-fluid rounded" alt="Mountains">
            <h5 class="mt-3">Majestic Mountains</h5>
            <p>Discover Bulgaria's beautiful mountain ranges and breathtaking views.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="/images/beach.jpg" class="img-fluid rounded" alt="Beaches">
            <h5 class="mt-3">Sunny Beaches</h5>
            <p>Relax on Bulgaria's pristine sandy beaches and clear blue waters.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="/images/plain.jpg" class="img-fluid rounded" alt="Fields">
            <h5 class="mt-3">Vast Fields</h5>
            <p>Experience the peaceful charm of Bulgaria's sprawling fields and fertile lands.</p>
        </div>
    </div>
</div>
