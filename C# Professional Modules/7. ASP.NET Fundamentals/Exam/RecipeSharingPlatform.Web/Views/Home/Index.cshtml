@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 welcome-section shadow-card">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-10 text-center">
            <h1 class="display-4">Welcome to RecipeSharing</h1>
            <p class="lead">Discover and share delicious recipes from around the world</p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg mt-3">Start Sharing Recipes</a>
        </div>
    </div>
</div>

<div class="container mt-4 explore-section shadow-card">
    <h2 class="text-center section-title">Explore Recipes</h2>
    <div class="row mt-4">
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/appetizer.jpg" asp-append-version="true" class="img-fluid rounded hover-zoom" alt="Appetizers">
            <h5 class="mt-3">Tasty Appetizers</h5>
            <p>Start your meal right with quick and easy appetizer ideas.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/main-course.jpg" asp-append-version="true" class="img-fluid rounded hover-zoom" alt="Main Dishes">
            <h5 class="mt-3">Delicious Main Dishes</h5>
            <p>Try hearty mains from traditional classics to modern favorites.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/dessert.jpg" asp-append-version="true" class="img-fluid rounded hover-zoom" alt="Desserts">
            <h5 class="mt-3">Sweet Desserts</h5>
            <p>Indulge in mouthwatering cakes, cookies, and treats for any occasion.</p>
        </div>
    </div>
</div>
